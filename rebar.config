{deps, [lager,
        eleveldb
       ]}.

{erl_opts, [debug_info,
           warnings_as_errors,
           warn_untyped_record,
           {platform_define, "^[0-9]+", namespaced_types},
           {parse_transform, lager_transform}]}.

{eunit_opts, [verbose]}.
{edoc_opts, [preprocess,
             {dir, "edoc"}]}.
{cover_enabled, true}.
{xref_checks, [undefined_function_calls]}.

{profiles, [{test, [{deps, [{riak_test, ".*", {git, "git://github.com/basho/riak_test", {branch, "master"}}}]}]}]}.
